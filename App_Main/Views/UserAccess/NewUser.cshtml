@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model App_ViewModels.Models.Users


<div class="main-wrapper">
    <div class="topbarhead">
        <div class="row">
            <div class="col-sm-4">
                <h2>AddUser</h2>
            </div>
            <div class="col-sm-8 text-right">
                <button type="button" onclick="uac_User.SaveUser();" class="btn btn-primary btn-add">Save</button>
                <button class="btn btn-primary btn-pdf">Upload Profile</button>
                <button class="btn btn-primary btn-pdf">View Profile</button>
                <button id="btnClose" class="btn btn-primary btn-close">close</button>
            </div>
        </div>
    </div>
    <div class="content_wraper">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#basicData">Basic Data</a>
            </li>
            <li class="nav-item" id="navtabEmpData">
                <a class="nav-link" data-toggle="tab" href="#employdata">Employee Data</a>
            </li>
            <li class="nav-item" id="navtabPayrollData">
                <a class="nav-link" data-toggle="tab" href="#paydata">Payroll Data</a>
            </li>
        </ul>
        @Html.HiddenFor(model => model.UserId, new { @Id = "UserId" })
        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane active" id="basicData">
                <h4 class="tabcontenttitle">Basic Information</h4>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="cstmdp input-group">
                            <input type="file" id="imgInp">
                            <img id='img-upload' />
                            <input type="hidden" id="imagebase64" />
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="form-label">UserName:</label>
                                <input type="text" id="txtUserName" class="form-control" />
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="form-label">ldap UserName:</label>
                                <input type="text" id="txtldapUserName" class="form-control" />
                            </div>
                            <div class="col-md-6 form-group">
                                <div id="passwordDiv" class="row">
                                    <div class="col-md-12 form-group">
                                        <label class="form-label">Pasword:</label>
                                        <input type="password" id="txtPassword" class="form-control" />
                                    </div>
                                    <div class="col-md-12 form-group">
                                        <label class="form-label">Confirm pasword:</label>
                                        <input type="password" id="txtConfirmPassword" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label class="form-label">First Name:</label>
                        <input type="text" id="txtFirsName" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">Last Name:</label>
                        <input type="text" id="txtLastName" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">Email:</label>
                        <input type="email" id="txtEmail" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">User From:</label>
                        @{
                            @Html.EnumDropDownListFor(model => model.userFrom, new { @class = "form-control", @Id = "userFrom" })
                        }
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">Date Created:</label>
                        <div id="dtDateCreated" style="width:100%;"></div>
                    </div>

                    <div class="col-md-6 form-group">
                        <label class="form-label">&nbsp;</label>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="IsActive" unchecked=""><span class="checkbox-material"><span class="check"></span></span>
                                Active
                            </label>
                        </div>
                        <div class="checkbox">
                            <label id="lblIsAllowPic">
                                <input type="checkbox" id="IsAllowPic" unchecked=""><span class="checkbox-material"><span class="check"></span></span>
                                Allow PICC Order
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="IsFacilityUser" unchecked=""><span class="checkbox-material"><span class="check"></span></span>
                                Is Facility User
                            </label>
                        </div>
                    </div>
                </div>

                <h4 class="tabcontenttitle">Define User Access</h4>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label class="form-label">Group* :</label>
                        <div id="cmbGroup"></div>
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">Company* :</label>
                        <div id="cmbCompany"></div>
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">Assign Region :</label>
                        <div id="ddlRegions"></div>
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label" id="lblFacilitites">Assign Additional Facility Outside an Assigned Region :</label>
                        <div id="ddlFacilities"></div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="employdata">
                <h4 class="tabcontenttitle">Employee Information</h4>
                <div class="row">

                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="form-label">Title:</label>
                                <div id="cmbJobTitle"></div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="form-label">Status:</label>
                                <div id="cmbStatus"></div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="form-label">Hired (Quickbooks Hired Date):</label>
                                <div id="dtHiredDate"></div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="form-label">Supervisor:</label>
                                <input type="text" id="txtQbSupervisorName" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label class="form-label">QuickBooks Full Name* :</label>
                        <input type="text" id="txtQbFullName" class="form-control" disabled="disabled" />
                    </div>


                    <div class="col-md-6 form-group">
                        <label class="form-label">Address :</label>
                        <input type="text" id="txtAddress1" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">Address2 :</label>
                        <input type="text" id="txtAddress2" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">City :</label>
                        <input type="text" id="txtCity" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">State :</label>
                        <input type="text" id="txtState" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">Zip Code* :</label>
                        <input type="text" id="txtZipCode" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">Home Phone :</label>
                        <input type="text" id="txtHomePhone" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">Mobile Phone :</label>
                        <input type="text" id="txtMobilePhone" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">Alt. Phone:</label>
                        <input type="text" id="txtAltPhone" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">Alt. Email:</label>
                        <input type="email" id="txtAltEmail" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">Note:</label>
                        <textarea rows="5" id="txtNotes" class="form-control"></textarea>
                    </div>

                </div>

                <h4 class="tabcontenttitle mt-4">Emergency Contact Information</h4>
                <div class="row">
                    <label class="form-label col-md-12">Primary:</label>
                    <div class="col-md-4 form-group">
                        <input type="text" id="txtEciPrimaryName" class="form-control" placeholder="Name" />
                    </div>
                    <div class="col-md-4 form-group">
                        <input type="text" id="txtEciPrimaryPhone" class="form-control" placeholder="(985) 809-1659" />
                    </div>
                    <div class="col-md-4 form-group">
                        <input type="text" id="txtEciPrimaryRelation" class="form-control" placeholder="Person" />
                    </div>
                </div>
                <div class="row">
                    <label class="form-label col-md-12">Secondary:</label>
                    <div class="col-md-4 form-group">
                        <input type="text" class="form-control" id="txtEciSecondaryName" placeholder="Name" />
                    </div>
                    <div class="col-md-4 form-group">
                        <input type="text" class="form-control" id="txtEciSecondaryPhone" placeholder="(985) 809-1659" />
                    </div>
                    <div class="col-md-4 form-group">
                        <input type="text" class="form-control" id="txtEciSecondaryRelation" placeholder="Person" />
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="paydata">
                <h4 class="tabcontenttitle" id="EmployeeNameForTitle"></h4>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label class="form-label">Title:</label>
                        <input type="text" id="txtTitle" class="form-control" disabled="disabled" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">Status:</label>
                        <input type="text" id="txtStatus" class="form-control" disabled="disabled" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">Payscale:</label>
                        <input type="text" class="form-control" disabled="disabled" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">Salary:</label>
                        <input type="text" id="txtSalary" class="form-control" disabled="disabled" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">Target:</label>
                        <input type="text" id="txtTarget" class="form-control" disabled="disabled" />
                    </div>
                </div>

                <h4 class="tabcontenttitle mt-4">Dynamic Infusion Therapy</h4>
                <div id="gridContainer"></div>
            </div>
        </div>
    </div>
</div>
<!-- ================== MAIN WRAPPER END ================== -->


@section scripts{
    <script src="~/Scripts/Assets/uac_AddUser.js"></script>
    <script>
        $(document).ready(function (e) {
            $(document).on('change', '.btn-file :file', function () {
                var input = $(this),
                    label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
                input.trigger('fileselect', [label]);
            });

            $('.btn-file :file').on('fileselect', function (event, label) {

                var input = $(this).parents('.input-group').find(':text'),
                    log = label;

                if (input.length) {
                    input.val(log);
                } else {
                    if (log) alert(log);
                }
            });
            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('#img-upload').attr('src', e.target.result);
                    }
                    if (input.files.length !== 0) {
                        reader.onloadend = function () {
                            // Since it contains the Data URI, we should remove the prefix and keep only Base64 string
                            var b64 = reader.result.replace(/^data:.+;base64,/, '');
                            $('#imagebase64').val(b64);
                            // console.log(b64);
                        };
                    }

                    reader.readAsDataURL(input.files[0]);
                }
            }

            $("#imgInp").change(function () {
                readURL(this);
            });

            $('#btnClose').on('click', function () {
                window.top.close();
            });
            $('#IsFacilityUser').click(function () {
                uac_User.FacilityUserClicked();
            });

            //anas//
            var model = @Html.Raw(Json.Encode(Model));
            uac_User.CreateControls(model);


            
            



        });
    </script>
}