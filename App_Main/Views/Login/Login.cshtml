
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/dxcss")

    @Scripts.Render("~/bundles/modernizr")
    <!-- ================== Font Awesome and Icons ================== -->
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    @*login style*@
    <link href="~/Content/Assets/login.css" rel="stylesheet" />
</head>
<body>
    <div class="containerlogin d-flex align-items-center">
        <div class="bx-resgistration text-center">
            <div class="topcnt">
                <img src="~/Content/Images/misc/logo.png" />
                <h1>Welcome!</h1>
                <p>
                    Please login to your account
                </p>
            </div>
            <div class="frm-content">
                <div class="form-group text-left">
                    <label class="form-label">User Name</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <img src="~/Content/Images/misc/icn-user.png" />
                            </span>
                        </div>
                        <input type="text" class="form-control" id="txtUserName" placeholder="User Name" />
                    </div>
                </div>
                <div class="form-group text-left">
                    <label class="form-label">Password</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <img src="~/Content/Images/misc/icn-lock.png" />
                            </span>
                        </div>
                        <input type="password" class="form-control" id="txtpassword" placeholder="Password" />
                    </div>
                </div>
                <a href="javascript:" onclick="login.showmodal();" class="frgtpswrd">Fortgot Password?</a>
                <button type="button" onclick="login.btnLogin_click();" class="btn btn-login">Login in</button>
            </div>
        </div>
    </div>

    @* forgot password modal *@
    <div class="modal fade" id="forgotpasswordmodal" tabindex="-1" role="dialog" aria-labelledby="forgotpasswordmodals">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5>Forgot password</h5>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="email" id="txtEmail" placeholder="type your registered email here" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" onclick="login.ResetPassword();" title="Send new password in email">Send</button>
                    <a id="btnCancel" href="javascript:void(0);" data-dismiss="modal" class="btn btn-default">Cancel</a>
                </div>
            </div>
        </div>
    </div>

    @* forgot password modal end *@
    @*<script src="~/Scripts/jquery-3.3.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/toastr.min.js"></script>
        <script src="~/Scripts/plugins/ati_common.js"></script>
        <script src="~/Scripts/plugins/ajaxHelper.js"></script>*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dxjs")
    @Scripts.Render("~/bundles/commonjs")

    <script src="~/Scripts/Assets/app_Login.js"></script>
</body>
</html>

